<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CharityManagement.Client.ViewModels"
             x:Class="CharityManagement.Client.Views.MainMenuView"
             x:DataType="vm:MainMenuViewModel">

    <Grid RowDefinitions="Auto,*"
          RowSpacing="16"
          Margin="24">
        <Border CornerRadius="16"
                Padding="20"
                Background="{DynamicResource ThemeBackgroundBrush}"
                BorderBrush="{DynamicResource ThemeBorderLowBrush}"
                BorderThickness="1">
            <Grid ColumnDefinitions="*,Auto"
                  ColumnSpacing="24">
                <StackPanel Spacing="4">
                    <TextBlock Text="Панель управления"
                               FontSize="26"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Session.Role, StringFormat=Роль: {0}}"
                               FontSize="12"
                               Opacity="0.75"/>
                    <TextBlock Text="{Binding ApiBaseUrl, StringFormat=Подключено к API: {0}}"
                               FontSize="12"
                               Opacity="0.6"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Выйти"
                        Command="{Binding LogoutCommand}"
                        Width="140"
                        Height="38"
                        HorizontalAlignment="Right"
                        CornerRadius="10"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              ColumnDefinitions="2*,*"
              ColumnSpacing="20">
            <Border Padding="24"
                    CornerRadius="16"
                    Background="{DynamicResource ThemeBackgroundBrush}"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="Разделы системы"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Выберите, с чем хотите работать"
                                   Margin="8,6,0,0"
                                   FontSize="12"
                                   Opacity="0.6"/>
                    </StackPanel>

                    <UniformGrid Columns="2" Rows="3" ColumnSpacing="16" RowSpacing="16">
                        <Button Content="Проекты"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Пожертвования"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Отчеты"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Уведомления"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Пользователи"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Аудит"
                                Height="58"
                                CornerRadius="12"
                                HorizontalAlignment="Stretch"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Padding="24"
                    CornerRadius="16"
                    Background="{DynamicResource ThemeBackgroundBrush}"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Сводка"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Здесь позже появятся виджеты с ключевой статистикой — активные проекты, недавние пожертвования и задачи для команды."
                               FontSize="12"
                               Opacity="0.7"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
